{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },

  "extends": "love",

  "plugins": [
    "simple-import-sort"
  ],

  "rules": {
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error"
  },

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  }
}
